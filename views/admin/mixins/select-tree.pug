mixin select-tree(items, level = 1, parent_id = "")
	each item in items 
		- const prefix = Array(level + 1).join("-- ")		// khai báo biến const thì có dấu - đằng trước
		option(
			value=item.id
			selected=(item.id == parent_id ? true : fasle)
			) #{prefix}#{item.title}
			if item.children && item.children.length > 0
				+select-tree(item.children, level + 1, parent_id)
